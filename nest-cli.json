{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "mail/**/*"
    ],
    "watchAssets": true,
    "webpack": true,
    "tsConfigPath": "apps/auth-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": ".",
  "projects": {
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "business": {
      "type": "application",
      "root": "apps/business",
      "entryFile": "main",
      "sourceRoot": "apps/business/src",
      "compilerOptions": {
        "tsConfigPath": "apps/business/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "masterdata": {
      "type": "application",
      "root": "apps/masterdata",
      "entryFile": "main",
      "sourceRoot": "apps/masterdata/src",
      "compilerOptions": {
        "tsConfigPath": "apps/masterdata/tsconfig.app.json"
      }
    },

    "worker": {
      "type": "application",
      "root": "apps/worker",
      "entryFile": "main",
      "sourceRoot": "apps/worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/worker/tsconfig.app.json"
      }
    }
  }
}